<main class="main">
  {{#with data}}
  {{!-- <form method="POST" action="/purchase-submit?id={{id}}" class="form-card"> --}}
    {{>heading title='Ваше замовлення'}}
    <div class="info_row">
      <span>ID: {{id}}</span>
    </div>
    {{>divider}}
    <div class="info_row">
      <span>Ім'я: {{firstname}}</span>
      <span>Прізвище: {{lastname}}</span>
      <span>Телефон: {{phone}}</span>
      <span>Електронна адреса: {{email}}</span>
    </div>
    {{>divider}}
    <div class="info_row">
      <span>Назва товару: {{product}}</span>
      <span>Коментар: {{comment}}</span>
    </div>
    {{>divider}}
    <div class="info_row">
      <span>Вартість товарів: {{productPrice}}</span>
      <span>Вартість доставки: {{deliveryPrice}}</span>
      <span>Сума до сплати: {{totalPrice}}</span>
      <span>Нараховані бонуси: {{bonus}}</span>
    </div>
    {{>divider}}

    {{!-- <ul class="cart">
