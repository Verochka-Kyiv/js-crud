{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<main>

  <div class="product-card">
    {{#with data}}
    <form method="POST" action="/product-edit">
      <h2 class="card-title">Інформація про товар</h2>
      <div class="field-row">
        <label for="name">Назва товару:</label><br>
        <input type="text" name="name" placeholder="Назва товару">
        <label for="price">Ціна:</label><br>
        <input type="text" name="price" placeholder="Ціна">
        <label for="id">ID товару:</label><br>
        <input type="text" name="id" placeholder="ID">
      </div>
      <div class="field-row">
        <label for="description">Короткий опис товару:</label><br>
        <textarea name="description" rows="4"></textarea><br>
        <small>Відображається у полі товару</small>
      </div>
      <div class="button-row">
        <button class="form__button">Зберегти оновлення</button>
        <a href="/product-delete?id={{id}}" class="form__button_red">Видалити товар</a>
      </div>
    </form>
    {{/with}}
  </div>

</main>





